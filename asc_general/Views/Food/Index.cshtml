<section id="our-menu" class="our-menu section section-bg-1 clearfix">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="section-title padding-bottom-60 text-center">
                    <h4 class="color-flamingo">Xüsusi Reseptlər</h4>
                    <h2 class="color-black">Gündəlik Menyu</h2>
                    <div class="clearfix">
                    </div>
                    <p>
                        Lorem ipsum dolor amet, consectetur adipiscing elit. Sed ut purus eget nunc ut dignissim cursus at
                        a nisl.
                        <br> Mauris vitae turpis quis Eros egestas tempor sit amet a arcu. Duis egestas hendrerit diam
                        .
                    </p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="bd-tab-menu">
                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs" role="tablist">
                      @{
                            var i =0;
                        foreach (var f_cat in Model.food_cat)
                        {
                            var active = i++ == 0 ? "active" : "";
                            <li role="presentation" class="@active">
                                <a href="#@f_cat.category_name" aria-controls="@f_cat.category_name" role="tab" data-toggle="tab">@f_cat.category_name</a>
                            </li>
                        }
                        }
                    </ul>

                
                    <!-- Tab panes -->
                    <div class="tab-content">
                     @{
                         var j = 0;
                         foreach (var f in Model.foods)
                         {

                             var active = j++ == 0 ? "active" : "";
                          
                                <div role="tabpanel" class="tab-pane fade in  @active" id="@f.food_categories.category_name">
                                    @for (int k = 0; k < 6; k++)
                                    {
                                    <div class="col-md-4 col-sm-6">
                                        <div class="bd-item-col">
                                            <div class="bd-food-image" style="width:350px;height:240px">
                                                <img src="~/Uploads/@f.photo" alt=""   style="width:350px;height:240px">
                                                <div class="bd-food-details">
                                                    <a href="#">
                                                        <h3> @f.name</h3>
                                                         <i class="fa fa-link" aria-hidden="true"></i>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    }
                                </div>
                             

                         }
                    } 

                    </div>


                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Priching Data -->

