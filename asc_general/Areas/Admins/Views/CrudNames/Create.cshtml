@model asc_general.Models.name

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admins/Views/Shared/_adminlayout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>name</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class = "control-label col-md-2">Name</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.name1, new { htmlAttributes = new { @class = "" } })
                @Html.ValidationMessageFor(model => model.name1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Letter</label>
            <div class="col-md-10">
                @Html.DropDownList("lettrs_id", null, htmlAttributes: new { @class = "" })
