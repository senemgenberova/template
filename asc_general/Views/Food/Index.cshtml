<!-- Strat Blog Area -->
<section id="blog" class="blog section clearfix">
    <div class="container">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
                <div class="section-title padding-bottom-50 text-center">
                    <h4 class="color-flamingo"> Ən yeni Məqalələr </h4>
                    <h2 class="color-black">latest News</h2>
                    <p>
                        Lorem ipsum dolor amet, consectetur adipiscing elit. Sed ut purus eget nunc ut dignissim cursus at
                        a nisl. Mauris vitae turpis quis Eros egestas tempor sit amet a arcu. Duis egestas hendrerit
                        diam .
                    </p>
                </div>
            </div>
        </div>
        <div class="row">
            <!--  End Section Header -->
            <div class="blog-area">

          @foreach (blog fblog in Model.food_blog)
          {
            <div class="col-sm-6 col-md-4 blog-box wow fadeInUp animated margin-bottom-30" data-wow-delay=".2s">
                <div class="blog-post">
                    <figure class="image">
                        <img alt="Blog Image" src="~/Uploads/@fblog.photo" class="img-responsive"  style="height:217px">
                        <div class="overly">
                            <div class="overly-icon">
                                <a class="link" href="#"><i class="fa fa-arrows"></i></a>
                            </div>
                        </div>
                    </figure>
                    <div class="contents-box">
                        <div class="content">
                            <a href="single.blog.html">
                                <h4 class="color-flamingo">@fblog.title</h4>
                            </a>

                            <p class="text-muted">@fblog.text.Substring(0, Math.Min(fblog.text.Length, 40))....</p>
                        </div>
                        <div class="row Continue-btn">
                            <div class="text-center">
                                <a href="@Url.Action("index","singleblog",new { id = fblog.id })">Ətraflı Oxu &nbsp;&nbsp;&nbsp; <i class="fa fa-long-arrow-right"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
          }

            </div>
        </div>
    </div>
</section>
<!-- End Blog Area -->

