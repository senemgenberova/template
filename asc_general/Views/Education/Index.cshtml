<!-- Gallery Section -->
<section class="gallery-holder white-bg">
    <!-- Main Heading -->
    <div class="main-heading-holder section-padding-top">
        <div class="main-heading">
            <h2>Uşaq <strong>Bağçaları</strong><span>Uşaqlarınız üçün ən yaxşı xidmət</span></h2>
        </div>
        <!-- Filter Tags List -->
        <div class="filter-tags-holder">
            <ul id="tg-filterbale-nav" class="option-set">
                <li><a class="selected" data-filter="*" href="#">Hamısı</a></li>
                @foreach (region region in Model.regions)
                {
                    <li>
                        <a data-filter=".@region.id" href="#">@region.region1</a>
                    </li>
                }
            </ul>
        </div>
        <!-- Filter Tags List -->
    </div>
    <!-- Main Heading -->
    <!-- Gallery Grid -->
    <div class="container">
        <div class="row">
            <div id="filter-masonry" class="gallery-masonry section-padding-top">
                @foreach (our_complex complex in Model.complex)
                {                    
                    <div class="masonry-grid col-md-3 col-xs-6 @complex.region_id r-full-width" style="margin-bottom:20px">
                        <figure class="gallery-figure">
                            <img class="img-responsive" style="height:190px; " src="~/Uploads/@complex.photo" alt="@complex.complex_name">
                            <figcaption class="gallery-hover">
                                <div class="tc-display-table">
                                    <div class="tc-display-table-cell">
                                        <a class="fa fa-link"  href="@Url.Action("index","complex",new { id = complex.id,regionID = complex.region_id})"></a>
                                    </div>
                                </div>
                            </figcaption>
                        </figure>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- Gallery Grid -->

</section>
<!-- Gallery Section -->
<!-- Strat Blog Area -->
<section id="blog" class="blog section clearfix">
    <div class="container">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
                <div class="section-title padding-bottom-50 text-center">
                    <h4 class="color-yellow"> Ən yeni Məqalələr </h4>
                    <p>
                        Lorem ipsum dolor amet, consectetur adipiscing elit. Sed ut purus eget nunc ut dignissim cursus
                        at a nisl. Mauris vitae turpis quis Eros egestas tempor sit amet a arcu. Duis egestas hendrerit
                        diam .
                    </p>
                </div>
            </div>
        </div>
        <div class="row">
            <!--  End Section Header -->
            <div class="blog-area">
                @foreach (blog e_blog in Model.edu_blog)
                {
                    <div class="col-sm-6 col-md-4 blog-box wow fadeInUp animated margin-bottom-30-991" data-wow-delay=".2s">
                        <div class="blog-post">
                            <figure class="image">
                                <img alt="Blog Image" src="~/Uploads/@e_blog.photo" class="img-responsive"  style="height:240px">
                                <div class="overly">
                                    <div class="overly-icon">
                                        <a class="link"><i class="fa fa-arrows"></i></a>
                                    </div>
                                </div>
                            </figure>
                            <div class="contents-box">

                                <div class="content">
                                    <a href="single.blog.html">
                                        <h4 class="color-black">@e_blog.title</h4>
                                    </a>

                                    <p class="text-muted"> @e_blog.text.Substring(0,Math.Min(e_blog.text.Length,40))... </p>
                                </div>
                                <div class="row Continue-btn">
                                    <div class="text-center">
                                        <a href="@Url.Action("index","singleblog",new { id = e_blog.id })" class="color-yellow">Ətraflı Oxu &nbsp;&nbsp;&nbsp;<i class="fa fa-long-arrow-right"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<!-- End Blog Area -->

